@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>CHATYSHO</title>
    <style>
        body {
            background-color: #800080;
            margin: 0;
            padding: 0;
        }

        #main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            color: white;
            text-align: center;
            font-size: 24px;
            line-height: 1.5;
            position: relative;
        }

        #start-button {
            background-color: green;
            color: white;
            padding: 10px 20px;
            font-size: 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 25px;
        }
    </style>
</head>
<body>
    <div id="main-content">
        <img src="~/Pictures/chatysho-low-resolution-logo-black-on-transparent-background.png" alt="Lego" style="width: 200px;">
        <h1>Hello!!!!! Welcome to CHATIYSHO.</h1>
        <div id="typed-text"></div>
        <form>
            <button id="start-button" asp-controller="Home" asp-action="ShowListGroups">START</button>
        </form>
        
    </div>

    <script>
    function typeText(element, text, speed) {
      let index = 0;
      const timer = setInterval(() => {
        element.textContent += text.charAt(index);
        index++;

        if (index === text.length) {
          clearInterval(timer);
        }
      }, speed);
    }

    const typedTextElement = document.getElementById("typed-text");
    const startButton = document.getElementById("start-button");

    const text = "I hope you enjoy this messenger";
    typeText(typedTextElement, text, 100); // Adjust the speed by changing the value (in milliseconds)

    startButton.addEventListener("click", () => {
      console.log("Button clicked!");
    });
    </script>
</body>
</html>